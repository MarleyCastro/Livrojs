    <script>
        let numberBrothers = Number(prompt('Digite um número: '));
        let previous = numberBrothers - 1;
        let later = numberBrothers + 1;
        alert(`Numero digitado = ${numberBrothers}\n Número anterior ${previous} número posterior ${later}`);
    </script>
